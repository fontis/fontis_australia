<config>
    <tabs>
        <fontis_extensions translate="label" module="australia">
            <label>Fontis Extensions</label>
            <sort_order>1000000</sort_order>
        </fontis_extensions>
    </tabs>
    <sections>
        <fontis_australia>
            <label>Australia</label>
            <tab>fontis_extensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <postcode_autocomplete translate="label">
                    <label>Postcode Autocomplete</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <max_results translate="label">
                            <label>Maximum Number of Results</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_results>
                    </fields>
                </postcode_autocomplete>
            </groups>
        </fontis_australia>
    </sections>
</config>
